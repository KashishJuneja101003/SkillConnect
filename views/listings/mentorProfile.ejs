<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mentor Profile</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f5f7fa;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
      .profile-container {
        max-width: 900px;
        margin: 50px auto;
        background: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      }
      .profile-header {
        background: linear-gradient(90deg, #007bff, #0056b3);
        color: #ffffff;
        padding: 30px;
        text-align: center;
      }
      .profile-header h1 {
        margin: 0;
        font-size: 2rem;
      }
      .profile-body {
        padding: 30px;
      }
      .profile-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin: 0 auto 20px;
        display: block;
        border: 5px solid #007bff;
      }
      .profile-section {
        margin-bottom: 30px;
      }
      .profile-section h2 {
        font-size: 1.5rem;
        color: #007bff;
        border-bottom: 2px solid #007bff;
        padding-bottom: 5px;
        display: inline-block;
        margin-bottom: 15px;
      }
      .profile-footer {
        background: #f8f9fa;
        padding: 20px;
        text-align: center;
      }
      .profile-footer a {
        margin: 0 10px;
      }
      .btn-linkedin {
        color: #0a66c2;
        text-decoration: none;
        font-weight: bold;
      }
      .btn-linkedin:hover {
        color: #004182;
        text-decoration: underline;
      }
      /* Styling for the 'Add New Course' button */
      .btn-add-course {
        margin-top: 20px;
        font-weight: bold;
        background-color: #28a745;
        border-color: #28a745;
      }
      .btn-add-course:hover {
        background-color: #218838;
        border-color: #1e7e34;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="profile-container">
        <!-- Header -->
        <div class="profile-header">
          <h1><%= mentor.name %></h1>
        </div>

        <!-- Body -->
        <div class="profile-body">
          <!-- Profile Picture -->
          <!-- <img 
          src="<%= mentor.image || 'https://via.placeholder.com/150?text=Mentor+Image' %>" 
          alt="<%= mentor.name %>'s Profile Picture" 
          class="profile-image"
        > -->

          <!-- Contact Information -->
          <div class="profile-section">
            <h2>Contact Information</h2>
            <p>
              <strong>Email:</strong>
              <a href="mailto:<%= mentor.email %>"><%= mentor.email %></a>
            </p>
            <p><strong>Phone:</strong> <%= mentor.phone || "Not Provided" %></p>
            <% if (mentor.linkedin) { %>
            <p>
              <strong>LinkedIn:</strong>
              <a
                href="<%= mentor.linkedin %>"
                target="_blank"
                class="btn-linkedin"
                >View Profile</a
              >
            </p>
            <% } %>
          </div>

          <!-- Skills and Expertise -->
          <div class="profile-section">
            <h2>Skills and Expertise</h2>
            <p><%= mentor.skills %></p>
          </div>

          <!-- Experience -->
          <div class="profile-section">
            <h2>Experience</h2>
            <p><%= mentor.experience %> years</p>
          </div>

          <!-- Mentorship Areas -->
          <div class="profile-section">
            <h2>Mentorship Areas</h2>
            <p><%= mentor.mentorshipArea %></p>
          </div>
        </div>

        <!-- Add a New Course -->
        <div class="text-center">
          <a href="/newCourse" class="btn btn-add-course">Add New Course</a>
        </div>

        <!-- Footer -->
        <div class="profile-footer">
          <a
            href="/updateMentorProfile/<%= mentor._id %>"
            class="btn btn-outline-primary"
            >Update Profile</a
          >
          <a
            href="/deleteMentor/<%= mentor._id %>"
            class="btn btn-outline-danger"
            >Delete Profile</a
          >
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
